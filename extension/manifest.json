{
  "manifest_version": 3,
  "name": "Credibility Coach (MVP)",
  "version": "0.1",
  "description": "Analyze highlighted text or tweets and show credibility percentage.",
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": ["https://*/", "http://*/"],
  "background": { "service_worker": "background.js" },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["contentScript.js"],
    "run_at": "document_idle"
  }],
  "action": { "default_title": "Credibility Coach" },
  "icons": { "48": "icons/48.png" }
}
